<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>TeacherManagementSystemWeb</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <listener>
    <listener-class>com.zx.teacherSystemWeb.flection.processor.ResourceListener</listener-class>
  </listener>
  <servlet>
    <description>用来登录的Servlet</description>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.zx.teacherSystemWeb.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/servlet/LoginServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>用来注册的Servlet</description>
    <servlet-name>RegistServlet</servlet-name>
    <servlet-class>com.zx.teacherSystemWeb.servlet.RegistServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegistServlet</servlet-name>
    <url-pattern>/servlet/RegistServlet</url-pattern>
  </servlet-mapping>
  <servlet>
  	<description>表格请求的Servlet</description>
  	<servlet-name>TableServlet</servlet-name>
  	<servlet-class>com.zx.teacherSystemWeb.servlet.TableServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>TableServlet</servlet-name>
  	<url-pattern>/servlet/TableServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>新增请求的Servlet</description>
    <servlet-name>AddServlet</servlet-name>
    <servlet-class>com.zx.teacherSystemWeb.servlet.AddServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddServlet</servlet-name>
    <url-pattern>/servlet/AddServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>删除请求的Servlet</description>
    <servlet-name>DeleteServlet</servlet-name>
    <servlet-class>com.zx.teacherSystemWeb.servlet.DeleteServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteServlet</servlet-name>
    <url-pattern>/servlet/DeleteServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>搜索请求的Servlet</description>
    <servlet-name>SearchServlet</servlet-name>
    <servlet-class>com.zx.teacherSystemWeb.servlet.SearchServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SearchServlet</servlet-name>
    <url-pattern>/servlet/SearchServlet</url-pattern>
  </servlet-mapping>
</web-app>